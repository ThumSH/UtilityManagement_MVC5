@model List<UtilityManagement_MVC5.Models.TopConsumerViewModel>
@{ ViewBag.Title = "Top Consumers"; }

<div class="container mt-5">
    <h2 class="text-primary fw-bold">🏆 Top Consumers</h2>
    <p class="text-muted">Highest usage customers (Strategic Planning).</p>

    <div class="card shadow border-0 mt-4">
        <table class="table table-hover mb-0">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Rank</th>
                    <th>Customer</th>
                    <th>Utility</th>
                    <th>Total Usage</th>
                    <th>Total Billed</th>
                </tr>
            </thead>
            <tbody>
                @{ int rank = 1; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold ps-3">#@rank</td>
                        <td>@item.CustomerName</td>
                        <td>@item.Utility</td>
                        <td class="fw-bold">@item.TotalUsage.ToString("N0")</td>
                        <td class="fw-bold text-success">Rs. @item.TotalSpent.ToString("N2")</td>
                    </tr>
                    rank++;
                }
            </tbody>
        </table>
    </div>
    <div class="mt-3">
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>
</div>