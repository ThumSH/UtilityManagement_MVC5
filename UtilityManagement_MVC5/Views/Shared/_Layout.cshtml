<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - UMS Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/dashboard.css")" rel="stylesheet" />
</head>
<body>
    @{
        var userRole = Session["UserRole"] as string;
        var userName = Session["UserName"] as string;
    }

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-3 fixed-top shadow-sm"
         style="background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px); border-bottom: 1px solid rgba(0,0,0,0.05);">
        <div class="container">
            <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")" style="color: #0061f2; font-size: 1.5rem;">
                ⚡ UMS Portal
            </a>

            <div class="collapse navbar-collapse d-flex justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link text-dark fw-bold" href="@Url.Action("Index", "Home")">Home</a></li>

                    @if (userRole == "Admin" || userRole == "Manager")
                    {
                        <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Index", "Customers")">Customers</a></li>
                    }

                    @if (userRole == "FieldOfficer" || userRole == "Admin")
                    {
                        <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Create", "Readings")">Enter Reading</a></li>
                    }

                    @if (userRole == "Manager" || userRole == "Admin")
                    {
                        <li class="nav-item"><a class="nav-link text-dark" href="#">Reports</a></li>
                    }

                    @if (!string.IsNullOrEmpty(userRole))
                    {
                        <li class="nav-item ms-3 border-start ps-3 d-flex align-items-center">
                            <span class="text-muted small me-2">@userName</span>
                            <a class="btn btn-outline-danger btn-sm rounded-pill" href="@Url.Action("Logout", "Account")">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link text-primary fw-bold" href="@Url.Action("Login", "Account")">Login</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top: 100px;">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>